<main>
    <div id="title">
        <h1>{{title}}</h1>
    </div>
    <div>
        <form action="/registration" method="post" name="registration">
            <label>Login
                <input type="text" name="login">
            </label>
            <br>
            <label>Age
                <input type="number" name="age" max="100" min="10">
            </label>
            <br>
            <label>Name
                <input type="text" name="name">
            </label>
            <br>
            <label>Password
                <input type="password" name="pass">
            </label>
            <br>
            <input type="submit">
        </form>
    </div>
</main>
